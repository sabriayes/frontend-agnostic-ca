{
    "extends": "../../tsconfig.json",
    "references": [
        {
            "path": "./tsconfig.vitest.json"
        }
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@core/common/*": [
                "src/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/*.spec.ts"
    ]
}


