{
    "name": "frontend-agnostic-ca",
    "version": "0.0.1",
    "description": "Frontend application with Angular, Vue, Next",
    "author": "Sabri Ayes <sabri@naylalabs.com>",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "lerna run start --scope=@libs/auth",
        "test": "lerna run test",
        "build:vue": "lerna run build --scope=@apps/vue",
        "build:next": "lerna run build --scope=@apps/next",
        "build:angular": "lerna run build --scope=@apps/angular",
        "dev:vue": "lerna run dev --scope=@apps/vue",
        "dev:next": "lerna run dev --scope=@apps/next",
        "dev:angular": "lerna run dev --scope=@apps/angular",
        "test:vue": "lerna run test --scope=@apps/vue",
        "test:next": "lerna run test --scope=@apps/next",
        "test:angular": "lerna run test --scope=@apps/angular"
    },
    "workspaces": [
        "apps/*",
        "libs/*"
    ],
    "devDependencies": {
        "lerna": "^8.1.8"
    },
    "_moduleAliases": {
        "@libs/common": "libs/common/dist",
        "@libs/auth": "libs/auth/dist"
    }
}
